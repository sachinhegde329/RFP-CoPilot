rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reads and writes for any logged-in user.
    // This is a good starting point for development. For production,
    // you'll want to implement more granular, tenant-based rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}