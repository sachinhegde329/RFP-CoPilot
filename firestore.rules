rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rule 1: Allow public read-only access to the main tenant documents.
    // This is needed to get branding and tenant name on initial load,
    // before the user is authenticated. Writing is denied to prevent tampering.
    match /tenants/{tenantId} {
      allow read: if true;
      allow write: if false;

      // Rule 2: Secure all sub-collections (rfps, notifications, etc.)
      // This requires the user to be logged in to access any nested data.
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
