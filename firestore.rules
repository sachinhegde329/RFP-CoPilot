
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public, read-only access to the main tenant document.
    // This is needed to load the app layout and branding before a user logs in.
    match /tenants/{tenantId} {
      allow get: if true;

      // Disallow listing all tenants for security.
      allow list: if false;

      // By default, deny write access to the main tenant document.
      // Specific write actions should be handled by secure server-side logic.
      allow write: if false;

      // Secure all subcollections. Only authenticated users can access their tenant's data.
      // A production app would have more granular rules (e.g., checking if request.auth.uid is in tenant.members).
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
