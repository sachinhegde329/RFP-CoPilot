rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to tenant documents for subdomain routing and branding
    match /tenants/{tenantId} {
      allow read: if true;
      allow write: if false; // Disallow public writes

      // For the demo tenant, allow anyone to read its subcollections.
      // For all other tenants, require authentication for any access.
      match /{subcollection}/{docId=**} {
        allow read: if tenantId == 'megacorp' || request.auth != null;
        allow write: if request.auth != null;
      }
    }
  }
}
