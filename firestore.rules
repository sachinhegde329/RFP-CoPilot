rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-only access to the main tenant documents.
    // This is required for the app layout to load, as it needs to know the tenant's name and branding.
    match /tenants/{tenantId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can update tenant info.

      // Lock down all sub-collections (e.g., rfps, knowledge_base) to be accessible
      // only by authenticated users of that tenant. This is a security catch-all.
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
