
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-only access to the main tenant documents.
    // This is required for the application layout to render correctly for any visitor,
    // as it needs to fetch the tenant's name and branding information before a user is logged in.
    match /tenants/{tenantId} {
      allow read: if true;

      // Disallow any public writes to the tenant documents.
      allow write: if false;

      // Secure all sub-collections (e.g., rfps, knowledge_sources, notifications)
      // by requiring that the user is authenticated to read or write any data within them.
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
