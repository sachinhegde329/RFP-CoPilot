rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read on the tenants collection so that
    // the app can resolve a subdomain to a tenant and display branding
    // before the user logs in. Writes are restricted.
    match /tenants/{tenantId} {
      allow get: if true;
      allow list: if false; // Don't allow listing all tenants for security.
      allow create, update, delete: if request.auth != null;
    }

    // For all documents nested under a tenant (e.g., RFPs, knowledge chunks),
    // require the user to be authenticated.
    match /tenants/{tenantId}/{collectionId}/{docId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
