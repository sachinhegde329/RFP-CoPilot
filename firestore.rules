rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read of tenant documents for layout and branding purposes.
    // This is required for the application to load correctly before a user signs in.
    match /tenants/{tenantId} {
      allow read: if true;
      allow write: if false; // Public writes are disallowed.

      // Secure all subcollections. Only authenticated users can access data
      // within a tenant's subcollections (e.g., rfps, knowledge_sources).
      match /{subcollection}/{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
