rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the main tenant documents for page layout
    // and branding, but prevent anonymous writes.
    match /tenants/{tenantId} {
      allow read: if true;
      allow write: if request.auth != null;

      // Secure all sub-collections (e.g., rfps, knowledge_chunks) within a tenant.
      // Full read/write access to this sensitive data requires authentication.
      match /{allChildren=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
