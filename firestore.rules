rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read-only access to the main tenant documents.
    // This is necessary for the application's layout to load correctly,
    // fetching public info like tenant name and branding.
    match /tenants/{tenantId} {
      allow get, list: if true;

      // Secure all sub-collections (e.g., RFPs, knowledge_chunks).
      // Only authenticated users can access data within a tenant.
      // For production, a more granular rule would check for tenant membership.
      match /{subcollection}/{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
