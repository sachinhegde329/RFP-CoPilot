rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are simplified for demonstration purposes to allow the application to function.
    // In a production environment, you should implement more granular, role-based security.

    // Allow public read access to all documents.
    // This is necessary for server-side rendering of pages and for the 'megacorp' demo to work.
    match /{document=**} {
      allow read: if true;

      // Allow write access only for authenticated users.
      // A production app would check for specific user roles and permissions here.
      allow write: if request.auth != null;
    }
  }
}
