rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-only access to tenant documents for subdomain routing and branding.
    // This is secure because sensitive data is in subcollections.
    match /tenants/{tenantId} {
      allow read: if true;
      allow write: if false; // Disallow any public writes

      // Secure all subcollections by default, requiring authentication.
      // Any data like RFPs, knowledge base, etc., stored under a tenant is protected.
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
