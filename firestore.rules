
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all access to prevent accidental exposure of data.
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the tenants collection.
    match /tenants/{tenantId} {
      // Allow anyone to read the main tenant document.
      // This is needed for the app to resolve the subdomain to a tenant
      // and display branding before a user is even logged in.
      allow read: if true;

      // Only authenticated users can create/update tenant details.
      // For a real app, this should be restricted to specific owners/admins.
      allow write: if request.auth != null;

      // Rules for all subcollections within a tenant document (e.g., rfps, knowledge_sources).
      // These rules ensure that all sensitive data is protected and requires authentication.
      match /{subcollection}/{docId=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
